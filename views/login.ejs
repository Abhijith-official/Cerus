<!DOCTYPE html>
<html lang="en">
  <head>
      <% include ./partials/head %>  
  </head>
  <body>
   <!-- START: header -->

  <div class="probootstrap-loader"></div>

  <header role="banner" class="probootstrap-header">
      <% include ./partials/header %>
  </header>
  <!-- END: header -->
 
   
   <div class="container" style="width: 100%;">
    <div class="row align-items-center justify-content-center" style="padding: 100px; background-image: url('/img/pomegranite.jpg');background-repeat: none;background-size: cover;">
      <!-- START LOGIN FORM-->
        <div class="col-md-6 col-md-offset-3" style="border: 0.5px solid grey;background-color: floralwhite;opacity:0.8;border-radius: 10px;box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;"> <!-- col-md-offset-3 class that will offset by 3 columns, given that Bootstrap has a 12-column grid this will put a col-md-6 element right in the center. -->
          <h3 class="heading text-center">USER LOGIN</h3>
          <% include ./partials/notificationbar %>
          <div class="probootstrap-section-heading text-center mb50 probootstrap-animate fadeInUp probootstrap-animated" style="background-image: url(/img/farm1.jpg); box-shadow: rgba(0, 0, 0, 0.3) 0px 3px 5px; height: 200px; background-size: 100%; background-repeat: no-repeat; ">
          </div>
          <center><h4 class="heading">Enter Your Details</h4></center>

            <form class="probootstrap-form mb60 validate-form" method="post">
                <div class="form-group">
                    <label for="loginUsername" style="color: black;">Username</label>
                    <input type="text" style="color: black; border: 2px solid green;" id="loginUsername" name="loginUsername"class="form-control" placeholder="Enter Username" required autofocus/>
                  </div>
      
                  <div class="form-group">
                    <label for="loginPassword" style="color: black;">Password</label>
                    <input type="password" style="color: black; border: 2px solid green;" id="loginPassword" name="loginPassword" class="form-control" placeholder="Enter Password" required>
                  </div>
      
                <div class="form-group">
                  <button class="btn btn-primary" type="submit" formaction="/app/auth/login">Login</button> <!-- Local Auth -->
                </div>
                
                <div class="form-group">
                  Don't have a Cerus account yet? <a href="/contact" style="color: green;">Sign up now</a>.
                </div>
                


            </form>
        </div>
        <br>
        <br>
        <!-- END LOGIN FORM-->
      </div>
    </div>

  <!-- start footer -->
  <% include ./partials/footer %>
  <!-- end footer -->
  
